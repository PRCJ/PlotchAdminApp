<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grey_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="top|left"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/dimen_10dp"

            android:alpha="0.5"
            android:gravity="center"
            android:padding="@dimen/dimen_5dp"
            android:textColor="#fff"
            android:textSize="@dimen/dimen_11sp"
            app:srcCompat="@drawable/hind_translate_logo" />

        <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/_8dp"
            android:text="Choose your preferred  language"
            android:textColor="@color/grey_40"
            android:textSize="@dimen/dimen_24dp" />

        <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/dimen_10dp"

            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginRight="@dimen/dimen_50dp"
            android:text="Please select your language in which you want to continue chat"
            android:textColor="@color/grey_40"
            android:textSize="@dimen/dimen_14dp" />


        <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
            android:id="@+id/english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/option_background"
            android:gravity="center"
            android:padding="@dimen/dimen_40dp"
            android:paddingBottom="@dimen/dimen_1dp"
            android:text=" English "
            android:textColor="@color/black_87"
            android:textSize="@dimen/dimen_14sp" />

        <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
            android:id="@+id/hindi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/option_background"
            android:gravity="center"
            android:padding="@dimen/dimen_40dp"
            android:paddingBottom="@dimen/dimen_1dp"
            android:text=" हिन्दी "
            android:textColor="@color/black_87"
            android:textSize="@dimen/dimen_14sp" />

    </LinearLayout>

</RelativeLayout>
