<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/their_convo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingTop="@dimen/dimen_5dp"
    android:paddingRight="50dp"
    android:paddingBottom="@dimen/dimen_5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/dimen_34dp"
        android:layout_height="@dimen/dimen_34dp"
        android:layout_centerVertical="true"
        android:elevation="@dimen/dimen_1dp"
        android:gravity="center"
        android:src="@drawable/ic_placeholder" />

    <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/avatar"
        android:paddingBottom="4dp"
        android:text=""
        android:textColor="@color/color_dark_grey"
        android:textSize="@dimen/dimen_11sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_toRightOf="@+id/avatar"
        android:background="@drawable/their_message"
        android:elevation="@dimen/dimen_1dp"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="215dp"
            android:layout_height="260dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/card_background"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_placeholder" />

        <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@id/avatar"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="How are you doing? This is a long message that should probably wrap."
            android:textColor="@color/color_dark_grey"
            android:textSize="@dimen/dimen_14sp"
            android:visibility="gone" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lotiView"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/maroonloading" />
    </LinearLayout>
</RelativeLayout>