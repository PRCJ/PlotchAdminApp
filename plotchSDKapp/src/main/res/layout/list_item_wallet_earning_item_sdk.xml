<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="@dimen/dimen_1dp"
        android:background="@drawable/card_background">

        <RelativeLayout
            android:id="@+id/layMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minWidth="@dimen/image_grid_size"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4dp"
                android:layout_marginHorizontal="2dp"
                android:layout_toLeftOf="@+id/layPayment"
                android:minWidth="@dimen/image_grid_size"
                android:orientation="horizontal"
                android:weightSum="7">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5">


                    <LinearLayout
                        android:id="@+id/bottom_actions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/coinBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_2dp"
                            android:background="@color/craftsvilla_coin_backgroud"
                            android:orientation="horizontal"
                            android:padding="2dp">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/cointypeImage"
                                android:layout_width="@dimen/dimen_13dp"
                                android:layout_height="@dimen/dimen_13dp"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/ic_craftsvilla_coins" />

                            <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
                                android:id="@+id/coinTypeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:fontFamily="@font/regular"
                                android:maxLines="1"
                                android:text="Craftsvilla Coin Earned"
                                android:textColor="#B68904"
                                android:textSize="@dimen/dimen_10sp" />


                        </LinearLayout>

                        <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
                            android:id="@+id/remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_2dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="3"
                            android:text="Craftsvilla Orange Color"
                            android:textColor="@color/black_70"
                            android:textSize="@dimen/dimen_12sp" />


                        <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
                            android:id="@+id/createdAt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:fontFamily="@font/regular"
                            android:maxLines="1"
                            android:text="6th Feb 2019 11:45 PM"
                            android:textColor="@color/grey_40"
                            android:textSize="@dimen/dimen_10sp" />


                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_6dp"
                android:gravity="right"
                android:orientation="vertical">

                <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
                    android:id="@+id/orderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="2dp"
                    android:fontFamily="sans-serif-bold"
                    android:gravity="left"
                    android:text="Order ID #635473"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/dimen_10sp"
                    android:textStyle="bold" />


                <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="2dp"
                    android:gravity="left"
                    android:text="+ â‚¹6,36.95"
                    android:textColor="@color/green"
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="bold" />

                <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
                    android:id="@+id/expiryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="2dp"
                    android:background="@color/color_transparent"
                    android:fontFamily="@font/regular"
                    android:gravity="left"
                    android:text="Expires on 17 june 2019"
                    android:textAllCaps="false"
                    android:textColor="@color/black_solid_54"
                    android:textSize="@dimen/dimen_10sp" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

