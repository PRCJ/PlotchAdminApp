<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_convo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="10dp"
    android:paddingLeft="50dp"
    android:paddingRight="10dp">

    <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewBold
        android:id="@+id/avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_reply"
        android:elevation="@dimen/dimen_1dp"
        android:gravity="center"
        android:text=" Me "
        android:textColor="#fff"
        android:textSize="@dimen/dimen_12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_toLeftOf="@+id/avatar"
        android:background="@drawable/my_message"
        android:elevation="@dimen/dimen_1dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/product_card"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_0dp"
            android:padding="@dimen/dimen_5dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/obj_image"
                style="@style/SelectableItemBackgroundWithBorderForImage"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_placeholder_small" />


            <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
                android:id="@+id/obj_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/obj_image"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:layout_marginBottom="@dimen/dimen_2dp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/similar_product_name"
                android:textColor="@color/black_54"
                android:textSize="@dimen/dimen_11sp" />


            <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewBold
                android:id="@+id/obj_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/obj_name"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_marginBottom="@dimen/dimen_2dp"

                android:gravity="center"
                android:maxLines="1"
                android:text="@string/similar_product_reg_price"
                android:textColor="@color/black_70"
                android:textSize="@dimen/dimen_11sp" />

            <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewBold
                android:id="@+id/obj_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/obj_description"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/similar_product_reg_price"
                android:textColor="@color/black_70"
                android:textSize="@dimen/dimen_11sp" />


        </RelativeLayout>


        <com.plotch.sdk.ChatBotService.view_element.ProximaNovaTextViewRegular
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:padding="10dp"
            android:scrollbarSize="@dimen/dimen_11sp"
            android:text="Placeholder message"
            android:textColor="@color/color_dark_grey"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

</RelativeLayout>